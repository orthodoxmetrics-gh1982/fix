{
  "version": "1.0.0",
  "created": "2025-01-26",
  "description": "Global OMAI command mappings for site-wide AI assistance",
  "settings": {
    "logFile": "/var/log/omai/global-commands.log",
    "requireConfirmation": true,
    "maxHistoryItems": 50,
    "timeoutSeconds": 30,
    "allowedRoles": ["super_admin"]
  },
  "categories": {
    "system": {
      "description": "System-level commands and monitoring",
      "commands": {
        "status": {
          "patterns": ["status", "system status", "check status"],
          "description": "Show overall system status",
          "action": "get_system_status",
          "safety": "safe",
          "context_aware": true
        },
        "restart_pm2": {
          "patterns": ["restart pm2", "restart services", "pm2 restart"],
          "description": "Restart PM2 services",
          "action": "restart_pm2",
          "safety": "moderate",
          "requires_hands_on": true
        },
        "show_logs": {
          "patterns": ["show logs", "logs", "view logs", "tail logs"],
          "description": "Display system logs",
          "action": "show_logs",
          "safety": "safe",
          "context_aware": true
        },
        "disk_space": {
          "patterns": ["disk space", "check disk", "df", "storage"],
          "description": "Show disk usage information",
          "action": "check_disk_space",
          "safety": "safe"
        }
      }
    },
    "error_monitoring": {
      "description": "Frontend error monitoring and management",
      "commands": {
        "errors": {
          "patterns": ["omai errors", "show errors", "error list", "frontend errors"],
          "description": "Display recent frontend errors",
          "action": "show_errors",
          "safety": "safe",
          "context_aware": true
        },
        "error_stats": {
          "patterns": ["error stats", "error statistics", "error count"],
          "description": "Show error statistics and counts",
          "action": "show_error_stats",
          "safety": "safe"
        },
        "clear_errors": {
          "patterns": ["clear errors", "reset errors", "delete all errors"],
          "description": "Clear all stored errors",
          "action": "clear_errors",
          "safety": "moderate",
          "requires_confirmation": true
        },
        "taskify_error": {
          "patterns": ["omai taskify", "create task from error", "taskify"],
          "description": "Create a Kanban task from a specific error",
          "action": "create_task_from_error",
          "safety": "safe",
          "requires_parameters": ["error_id"]
        },
        "error_details": {
          "patterns": ["error details", "show error", "error info"],
          "description": "Show detailed information about a specific error",
          "action": "show_error_details",
          "safety": "safe",
          "requires_parameters": ["error_id"]
        }
      }
    },
    "navigation": {
      "description": "Page navigation and UI commands",
      "commands": {
        "refresh_page": {
          "patterns": ["refresh", "reload", "refresh page"],
          "description": "Refresh the current page",
          "action": "refresh_page",
          "safety": "safe"
        },
        "go_to": {
          "patterns": ["go to", "navigate to", "open"],
          "description": "Navigate to a specific page",
          "action": "navigate",
          "safety": "safe",
          "requires_parameters": ["url"]
        },
        "back": {
          "patterns": ["back", "go back", "previous"],
          "description": "Go back to previous page",
          "action": "navigate_back",
          "safety": "safe"
        }
      }
    },
    "development": {
      "description": "Development and build commands",
      "commands": {
        "build_status": {
          "patterns": ["build status", "check build", "last build"],
          "description": "Check frontend build status",
          "action": "check_build_status",
          "safety": "safe",
          "context_aware": true
        },
        "start_build": {
          "patterns": ["start build", "run build", "build frontend"],
          "description": "Start frontend build process",
          "action": "start_build",
          "safety": "moderate",
          "requires_hands_on": true
        },
        "restart_build": {
          "patterns": ["restart build", "rebuild"],
          "description": "Restart the build process",
          "action": "restart_build",
          "safety": "moderate",
          "requires_hands_on": true
        }
      }
    },
    "database": {
      "description": "Database and records commands",
      "commands": {
        "record_counts": {
          "patterns": ["record counts", "show records", "count records"],
          "description": "Show record counts by type",
          "action": "get_record_counts",
          "safety": "safe",
          "context_aware": true
        },
        "recent_records": {
          "patterns": ["recent records", "latest records", "new records"],
          "description": "Show recently added records",
          "action": "get_recent_records",
          "safety": "safe",
          "context_aware": true
        },
        "export_records": {
          "patterns": ["export records", "backup records"],
          "description": "Export church records",
          "action": "export_records",
          "safety": "moderate",
          "context_aware": true
        }
      }
    },
    "users": {
      "description": "User management commands",
      "commands": {
        "active_users": {
          "patterns": ["active users", "online users", "who is online"],
          "description": "Show currently active users",
          "action": "get_active_users",
          "safety": "safe"
        },
        "user_sessions": {
          "patterns": ["user sessions", "sessions", "check sessions"],
          "description": "Show active user sessions",
          "action": "get_user_sessions",
          "safety": "safe"
        },
        "list_permissions": {
          "patterns": ["list permissions", "show permissions", "user roles"],
          "description": "Display user roles and permissions",
          "action": "list_permissions",
          "safety": "safe"
        }
      }
    },
    "ai": {
      "description": "AI and OMAI specific commands",
      "commands": {
        "ai_status": {
          "patterns": ["ai status", "omai status", "ai health"],
          "description": "Check AI system status",
          "action": "get_ai_status",
          "safety": "safe"
        },
        "restart_ai": {
          "patterns": ["restart ai", "restart omai", "ai restart"],
          "description": "Restart AI services",
          "action": "restart_ai_services",
          "safety": "moderate",
          "requires_hands_on": true
        },
        "ai_metrics": {
          "patterns": ["ai metrics", "show metrics", "ai stats"],
          "description": "Display AI performance metrics",
          "action": "get_ai_metrics",
          "safety": "safe"
        }
      }
    },
    "help": {
      "description": "Help and information commands",
      "commands": {
        "help": {
          "patterns": ["help", "commands", "what can you do"],
          "description": "Show available commands",
          "action": "show_help",
          "safety": "safe"
        },
        "explain_page": {
          "patterns": ["explain this page", "what is this", "page info"],
          "description": "Explain the current page",
          "action": "explain_current_page",
          "safety": "safe",
          "context_aware": true
        },
        "shortcuts": {
          "patterns": ["shortcuts", "keyboard shortcuts", "hotkeys"],
          "description": "Show keyboard shortcuts",
          "action": "show_shortcuts",
          "safety": "safe",
          "context_aware": true
        }
      }
    }
  },
  "contextual_suggestions": {
    "/admin/ai": [
      "ai status",
      "ai metrics",
      "restart ai",
      "show logs"
    ],
    "/admin/build": [
      "build status",
      "start build",
      "show logs",
      "restart build"
    ],
    "/admin/bigbook": [
      "show logs",
      "ai status",
      "explain this page"
    ],
    "/admin/users": [
      "active users",
      "user sessions",
      "list permissions"
    ],
    "/apps/records-ui": [
      "record counts",
      "recent records",
      "export records"
    ],
    "/apps/records": [
      "record counts",
      "recent records",
      "export records"
    ],
    "/omb/editor": [
      "build status",
      "explain this page",
      "shortcuts"
    ]
  },
  "security": {
    "destructive_commands": [
      "restart_pm2",
      "start_build",
      "restart_build",
      "restart_ai",
      "export_records"
    ],
    "confirmation_required": [
      "restart_pm2",
      "start_build",
      "restart_build",
      "restart_ai"
    ],
    "hands_on_required": [
      "restart_pm2",
      "start_build",
      "restart_build",
      "restart_ai"
    ]
  },
  "logging": {
    "enabled": true,
    "log_commands": true,
    "log_results": true,
    "log_context": true,
    "retention_days": 30
  }
} 